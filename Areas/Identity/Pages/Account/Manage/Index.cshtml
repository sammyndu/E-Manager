@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Sex"></label>
                <select asp-for="Input.Sex" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Input.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DOB"></label>
                <input asp-for="Input.DOB" class="form-control" />
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.MaritalStatus"></label>
                <input asp-for="Input.MaritalStatus" class="form-control" />
                <span asp-validation-for="Input.MaritalStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NumberOfChildren"></label>
                <input asp-for="Input.NumberOfChildren" class="form-control" />
                <span asp-validation-for="Input.NumberOfChildren" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="Input.isActive"></label>
                <input asp-for="Input.isActive" value="1" class="form-control" />
                <span asp-validation-for="Input.isActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.EmploymentDate"></label>
                <input asp-for="Input.EmploymentDate" class="form-control" />
                <span asp-validation-for="Input.EmploymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.HighestEducationQualification"></label>
                <input asp-for="Input.HighestEducationQualification" class="form-control" />
                <span asp-validation-for="Input.HighestEducationQualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.School"></label>
                <input asp-for="Input.School" class="form-control" />
                <span asp-validation-for="Input.School" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ServiceYear"></label>
                <input asp-for="Input.ServiceYear" class="form-control" />
                <span asp-validation-for="Input.ServiceYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CompanyPosition"></label>
                <input asp-for="Input.CompanyPosition" class="form-control" />
                <span asp-validation-for="Input.CompanyPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastPromotionDate"></label>
                <input asp-for="Input.LastPromotionDate" class="form-control" />
                <span asp-validation-for="Input.LastPromotionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.YearlySalary"></label>
                <input asp-for="Input.YearlySalary" class="form-control" />
                <span asp-validation-for="Input.YearlySalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}